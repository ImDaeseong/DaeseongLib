<Window x:Class="Wpfunzip.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Wpfunzip"
        mc:Ignorable="d"
        Title="wpfunzip" Height="100" Width="200"
        ShowInTaskbar="False" WindowStartupLocation="CenterScreen" AllowsTransparency="True" WindowStyle="None" Loaded="Window_Loaded" Closed="Window_Closed" DragOver="Window_DragOver" Drop="Window_Drop" MouseLeftButtonDown="Window_MouseLeftButtonDown">

    <Window.Background>
        <ImageBrush ImageSource="Image/frame01.png"/>
    </Window.Background>
    
    <Grid >
        <Label x:Name="lblDrag" Content="zip 파일을 드레그 하세요." HorizontalAlignment="Center" Margin="4,32,6,35" VerticalAlignment="Center" RenderTransformOrigin="-0.168,-0.885" Width="190" Height="33" FontSize="16" Background="Transparent" Foreground="Orange"/>
        <Button x:Name="btnUnzip" Content="Unzip" HorizontalAlignment="Center" VerticalAlignment="Bottom" Width="100" Click="Button_Click" Margin="50,0,50,35" RenderTransformOrigin="0.45,3.636"/>
    </Grid>
</Window>
